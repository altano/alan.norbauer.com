---
export type Props = { class?: string | undefined };
---

<style>
  @layer components {
    li {
      display: flex;
      flex-direction: column;
      gap: var(--spacing-1);

      &:only-of-type {
        /** 
         * When we're the only list item (not in the row, but in the entire 
         * list) then take up the whole column 
         */
        grid-column: 1 / span 2;
      }
    }
  }
</style>

<li><slot /></li>
