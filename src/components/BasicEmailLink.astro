---
import { getAlan } from "@/content-utils/query/authors";

export type Props = {
  subject?: string | undefined;
  children: unknown;
};

const alan = await getAlan();
const { subject = "Hey Nerd" } = Astro.props;
---

<a
  href={`mailto:${alan.data.socials.email.handle}?subject=${encodeURIComponent(subject)}`}
  ><slot /></a
>
