---
import { Icon } from "astro-icon/components";
import SocialIcon from "@/components/social/SocialIcon.astro";
import { getUiUID } from "@/utilities/ui-uid";

export type Props = {
  text?: string | undefined;
  size?: number | undefined;
  icon?: false | undefined;
};

const { size = 21, ...otherOptions } = Astro.props;
const id = getUiUID();
---

<SocialIcon {id} {size} {...otherOptions} social="twitter">
  <Icon size={size} name="fa6-brands:twitter" aria-labelledby={id} />
</SocialIcon>
