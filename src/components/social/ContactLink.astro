---
import { Icon } from "astro-icon/components";
import SocialIcon from "@/components/social/SocialIcon.astro";
import { link } from "astro-typed-links/link";
import { getUiUID } from "@/utilities/ui-uid";

export type Props = {
  text?: string | undefined;
  size?: number | undefined;
  icon?: false | undefined;
};

const { size = 24, ...otherOptions } = Astro.props;
const id = getUiUID();
---

<SocialIcon
  {id}
  {size}
  {...otherOptions}
  alt="Other Contact Methods"
  href={link("/contact")}
>
  <Icon
    size={size}
    name="material-symbols:android-contacts"
    aria-labelledby={id}
  />
</SocialIcon>
