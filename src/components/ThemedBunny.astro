---
import LightBunny from "assets/images/bunny-carrot-hole/bunny-light.svg";
import DarkBunny from "assets/images/bunny-carrot-hole/bunny-dark.svg";
---

<LightBunny class="light" aria-label="A stupid bunny" width={64} height={64} />
<DarkBunny
  fill="white"
  class="dark"
  aria-label="A stupid, sleeping bunny"
  width={64}
  height={64}
/>

<style>
  @layer components {
    :global(svg path) {
      fill: var(--text);
    }

    html[data-theme="light"] .dark {
      display: none;
    }

    html[data-theme="dark"] .light {
      display: none;
    }
  }
</style>
