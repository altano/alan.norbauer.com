---
import { type CollectionEntry } from "astro:content";
import OpenGraph from "@/components/OpenGraph.astro";
import { getArticlePrimaryAuthor } from "@/content-utils/query/articles";

type Props = CollectionEntry<"articles">;

const article = Astro.props;
const author = await getArticlePrimaryAuthor(article);
const subtitle = `by ${author.data.name}`;
---

<OpenGraph title={article.data.title} subtitle={subtitle} />
