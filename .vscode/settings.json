/** eslint-disable @typescript-eslint/no-unused-expressions */
{
  "files.readonlyInclude": {
    ".astro/**": true,
    ".devbox/**": true,
    "dist/**": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.devbox": true
  },
  "search.exclude": {
    "**/flaticon.html": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.next": true,
    "**/out": true
  },
  "editor.linkedEditing": true,
  "editor.formatOnSave": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "stylelint.packageManager": "pnpm",
  "stylelint.snippet": [
    "css",
    "less",
    "postcss",
    "typescript",
    "typescriptreact"
  ],
  "stylelint.validate": [
    "css",
    "less",
    "postcss",
    "typescript",
    "typescriptreact"
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "astro", // Enable .astro
    "typescript", // Enable .ts
    "typescriptreact" // Enable .tsx
  ],
  "typescript.updateImportsOnFileMove.enabled": "always",
  "frontMatter.dashboard.openOnStart": true,
  "todo-tree.filtering.excludeGlobs": ["**/node_modules/*/**"],
  "cssvar.ignore": [
    "**/node_modules/**",
    "styles/ignore.css",
    "out/**",
    "src/app/global.css"
  ],
  "editor.minimap.enabled": false,
  "editor.rulers": [80],
  "[mdx]": {
    "editor.wordWrap": "on"
  },
  "cSpell.enabled": true
}
